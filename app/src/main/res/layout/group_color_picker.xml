<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.larswerkman.holocolorpicker.ColorPicker
            android:id="@+id/colour_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:color_wheel_radius="200dp"
            app:color_wheel_thickness="20dp"
            app:color_center_radius="40dp"
            app:color_center_halo_radius="40dp"
            app:color_pointer_radius="10dp"
            app:color_pointer_halo_radius="15dp" />

    </RelativeLayout>

</LinearLayout>