<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <com.triggertrap.seekarc.SeekArc
        android:id="@+id/timer_seekArc_minutes"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:padding="30dp"
        seekarc:startAngle="0"
        seekarc:sweepAngle="360"
        seekarc:touchInside="true"
        seekarc:clockwise="true"
        android:layout_gravity="center|top"
        seekarc:max="59"
        seekarc:arcColor="@color/colorPrimary"
        seekarc:progressWidth="4dp"
        seekarc:roundEdges="true"
        seekarc:thumb="@drawable/scrubber_control_focused_holo" />

    <TextView
        android:id="@+id/timer_duration_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="50dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/timer_time_to_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:padding="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START"/>


</LinearLayout>
